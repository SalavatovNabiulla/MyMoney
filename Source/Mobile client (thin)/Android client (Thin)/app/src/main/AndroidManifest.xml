<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mymoney">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MyMoney">
        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.TransactionsActivity"/>
        <activity android:name=".activities.TransactionActivity"/>
        <activity android:name=".activities.WalletsActivity"/>
        <activity android:name=".activities.WalletActivity"/>
        <activity android:name=".activities.WalletsTypeActivity"/>
        <activity android:name=".activities.WalletsTypesActivity"/>
        <activity android:name=".activities.CostItemActivity"/>
        <activity android:name=".activities.CostItemsActivity"/>
        <activity android:name=".activities.RevenueItemActivity"/>
        <activity android:name=".activities.RevenueItemsActivity"/>
        <activity
            android:name=".activities.MainMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>