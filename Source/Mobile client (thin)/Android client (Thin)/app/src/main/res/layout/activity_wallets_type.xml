<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/save_wallets_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/wallets_type_id_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallets_type_id_label" />

    <TextView
        android:id="@+id/wallets_type_title_label"
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:text="Название"
        app:layout_constraintEnd_toEndOf="@+id/wallets_type_title_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wallets_type_title_edit"
        app:layout_constraintTop_toBottomOf="@+id/wallets_type_id_edit" />

    <EditText
        android:id="@+id/wallets_type_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/save_wallets_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallets_type_title_label"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/wallets_type_id_label"
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:layout_marginTop="272dp"
        android:text="ID"
        app:layout_constraintEnd_toEndOf="@+id/wallets_type_id_edit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wallets_type_id_edit"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delete_wallets_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:enabled="false"
        android:text="Удалить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toEndOf="@+id/save_wallets_type"
        app:layout_constraintTop_toTopOf="@+id/save_wallets_type"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>